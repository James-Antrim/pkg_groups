<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params">
        <fieldset name="basic" label="GROUPS_SETTINGS">
            <field name="groupID" type="usergroup" label="GROUPS_GROUP" multiple="false"/>
            <field name="subgroups" type="radio" label="GROUPS_INCLUDE_SUBGROUPS" default="1" filter="integer"
                   layout="joomla.form.field.radio.switcher">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="showTitles" type="radio" label="GROUPS_SHOW_PROFILE_TITLES" default="1" filter="integer"
                   layout="joomla.form.field.radio.switcher">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="showRoles" type="radio" label="GROUPS_SHOW_ROLES" default="0" filter="integer"
                   layout="joomla.form.field.radio.switcher">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="columns" type="integer" label="GROUPS_COLUMN_NUMBER" first="1" last="3" step="1" default="2"/>
        </fieldset>
    </fields>
</form>