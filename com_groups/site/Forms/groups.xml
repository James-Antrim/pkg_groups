<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="batch">
        <field name="levels" type="ViewLevels" label="GROUPS_LEVELS"/>
        <field name="action" type="radio" label="GROUPS_LEVEL_ACTION">
            <option value="">GROUPS_NO_ACTION</option>
            <option value="1">GROUPS_ADD</option>
            <option value="0">GROUPS_REMOVE</option>
        </field>
    </fields>
    <fields name="filter">
        <field name="search" type="text" label="GROUPS_SEARCH" hint="GROUPS_SEARCH_TERMS"/>
        <field name="levelID" type="ViewLevels" label="GROUPS_LEVEL" onchange="this.form.submit();">
            <option value="">GROUPS_ALL_LEVELS</option>
            <option value="-1">GROUPS_NO_LEVELS</option>
        </field>
        <field name="roleID" type="Roles" label="GROUPS_ROLE" onchange="this.form.submit();">
            <option value="">GROUPS_ALL_ROLES</option>
            <option value="-1">GROUPS_NO_ROLES</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="JGLOBAL_LIST_LIMIT" onchange="this.form.submit();"/>
    </fields>
</form>
